{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "data": {
    "url": "../data/drug-type.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 2021,
      "bind": {
        "input": "range",
        "min": 2004,
        "max": 2021,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "drug_selection",
      "select": {"type": "point", "fields": ["Type of drug"]},
      "bind": "legend"
    }
  ],
  "transform": [
    {"filter": "datum.Year == year_select"},
    {"filter": "datum.Value != '-'"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Type of drug",
      "type": "nominal",
      "title": "Drug Type",
      "axis": {"labelAngle": -45}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Number of Addicts (Square Root Scale)",
      "scale": {"type": "sqrt"},
      "axis": {"tickCount": 5}
    },
    "color": {
      "field": "Type of drug",
      "type": "nominal",
      "legend": {
        "title": "Drug Types",
        "titleFontSize": 14,
        "labelFontSize": 14,
        "orient": "bottom",
        "direction": "horizontal",
        "columns": 8
      }
    },
    "opacity": {
      "condition": {"param": "drug_selection", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Type of drug", "type": "nominal"},
      {"field": "Value", "type": "quantitative", "title": "Number of Addicts"}
    ]
  }
}