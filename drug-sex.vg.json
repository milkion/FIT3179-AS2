{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "drug-sex.csv"},
  "vconcat": [
    {
      "title": {"text": "Male", "fontSize": 16},
      "width": "container",
      "height": 300,
      "transform": [{"filter": "datum.Sex == 'Male'"}],
      "mark": {"type": "area", "line": true, "point": true},
      "encoding": {
        "x": {
          "field": "Year ",
          "type": "quantitative",
          "axis": {"title": "Year", "labelFontSize": 12, "titleFontSize": 14, "format": "d"}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Number of Addicts", "labelFontSize": 12, "titleFontSize": 14}
        },
        "color": {"value": "#0072B2"},
        "tooltip": [
          {"field": "Year ", "type": "quantitative", "title": "Year", "format": "d"},
          {"field": "Value", "type": "quantitative", "title": "Number of Addicts"}
        ]
      }
    },
    {
      "title": {"text": "Female", "fontSize": 16},
      "width": "container",
      "height": 300,
      "transform": [{"filter": "datum.Sex == 'Female'"}],
      "mark": {"type": "area", "line": true, "point": true},
      "encoding": {
        "x": {
          "field": "Year ",
          "type": "quantitative",
          "axis": {"title": "Year", "labelFontSize": 12, "titleFontSize": 14, "format": "d"}
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "axis": {"title": "Number of Addicts", "labelFontSize": 12, "titleFontSize": 14}
        },
        "color": {"value": "#D55E00"},
        "tooltip": [
          {"field": "Year ", "type": "quantitative", "title": "Year", "format": "d"},
          {"field": "Value", "type": "quantitative", "title": "Number of Addicts"}
        ]
      }
    },
    {
      "title": {"text": "Total", "fontSize": 16},
      "width": "container",
      "height": 300,
      "transform": [
        {
          "aggregate": [{
            "op": "sum",
            "field": "Value",
            "as": "TotalValue"
          }],
          "groupby": ["Year "]
        }
      ],
      "mark": {"type": "area", "line": true, "point": true},
      "encoding": {
        "x": {
          "field": "Year ",
          "type": "quantitative",
          "axis": {"title": "Year", "labelFontSize": 12, "titleFontSize": 14, "format": "d"}
        },
        "y": {
          "field": "TotalValue",
          "type": "quantitative",
          "axis": {"title": "Total Number of Addicts", "labelFontSize": 12, "titleFontSize": 14}
        },
        "color": {"value": "#009E73"},
        "tooltip": [
          {"field": "Year ", "type": "quantitative", "title": "Year", "format": "d"},
          {"field": "TotalValue", "type": "quantitative", "title": "Total Number of Addicts"}
        ]
      }
    }
  ]
}